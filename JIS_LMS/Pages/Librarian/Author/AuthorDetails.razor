@page "/Librarian/Author/Details/{Id:int}"
@layout LibrarianLayout
@using JIS_LMS.Data;
@using JIS_LMS.Model;
@inject AuthorService AuthorService


<div class="container">
    <div class="container-fluid container-contact100">
        <div class="wrap-contact100">
            <h3>Author Details</h3>

            <table class="table table-hover">

                <tr>
                    <td>First Name: </td>
                    <td>@author.FirstName</td>
                </tr>

                <tr>
                    <td>Last Name: </td>
                    <td>@author.LastName</td>
                </tr>

            </table>

            <a href="/Librarian/Author/Edit/@Id" class="btn btn-outline-primary" role="button">Edit</a>
            <a href="/Librarian/Authors/Search" class="btn btn-outline-secondary" role="button">Back</a>
            <div class="mt-4"></div>
        </div>
    </div>
</div>

@code {

    Author author = new Author();

    [Parameter]
    public int Id { get; set; }

    protected override void OnInitialized()
    {
        author = AuthorService.GetAuthor(Id);
    }
}
